@model IEnumerable<car4you.Models.Utilizador>

@{
    ViewData["Title"] = "Login";
    var returnUrl = ViewData["ReturnUrl"] as string;
    var error = TempData["Error"] as string;
}


<h1>@ViewData["Title"]</h1>
@if (!string.IsNullOrEmpty(error))
{
    <h2 class="alert-danger" style="padding:20px;">@error</h2>   
}
<form action="/login?ReturnUrl=@System.Net.WebUtility.UrlEncode("Home")" method="post">
    <input type="text" name="username" placeholder="Username"/>
    <input type="password" name="password" placeholder="Password"/>
    <input type="submit" value="Login"> |
    <a  asp-controller="User" asp-action="Create">Registar</a>
    
</form>